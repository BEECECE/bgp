

<%= link_to "New Gossip", new_gossip_path %>


<div class="container d-flex flex-wrap justify-content-around align-items-between .p-10 {
  padding: $spacer !important;
}">
  <% @gossips.each do |gossip| %>

    <div class="card" style="width: 18rem;">
    <div class="card-body" style="Bold text">
        <div class="card-title" style="font-italic"></div>
        <h5 class="card-title"> <%= gossip.title%></h5>
      <h6 class="card-content"> <%= gossip.content%></h6>
      <h6 class="card-subtitle mb-2 text-muted"><%= gossip.created_at%></h6>
      <h6 class="card-subtitle mb-2 text-muted"><%= gossip.updated_at%></h6>
      <h6 class="card-subtitle mb-2 text-muted"><%= gossip.likes.count%></h6>
      
    </div>
  </div>
  <% end %>
</div>
